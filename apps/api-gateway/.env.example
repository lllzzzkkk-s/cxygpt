# ================================
# CxyGPT 配置文件示例
# ================================
# 复制此文件为 .env 并根据实际情况修改

# === 基本配置 ===
USE_MOCK=true
SINGLE_USER=true
DEFAULT_MODEL=qwen3-14b

# === 数据库配置 ===
# MySQL 配置（推荐生产环境）
DATABASE_URL=mysql+aiomysql://root:123456@localhost:3306/cxygpt?charset=utf8mb4

# PostgreSQL 配置（备选方案）
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cxygpt

# SQLite 配置（仅用于开发测试）
# DATABASE_URL=sqlite+aiosqlite:///./cxygpt.db

# === 限流配置 ===
MAX_INPUT_TOKENS=3072
MAX_OUTPUT_TOKENS=512
RATE_QPS=0  # 0 表示不限流
RATE_TPM=0

# === 队列配置 ===
QUEUE_SIZE=1

# === 超时配置（秒） ===
TIMEOUT_FIRST_TOKEN=20
TIMEOUT_TOTAL=120

# === 上游配置 ===
UPSTREAM_OPENAI_BASE=http://127.0.0.1:8000

# === 服务配置 ===
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8001

# === 降级配置 ===
AUTO_DEGRADE=false

# === 日志配置 ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json, text
