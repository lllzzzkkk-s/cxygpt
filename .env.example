# ========================
# 环境配置示例
# ========================

# ===== 模式与档位配置 =====
# 单人模式开关（1=单人家用，0=多人并发）
SINGLE_USER=1

# 强制使用特定档位（可选，优先级高于 SINGLE_USER）
# 可选值：SINGLE_32G | DEV_32G | SRV_48G | SRV_80G | SRV_MULTI_80G
# FORCE_PROFILE=SINGLE_32G

# ===== vLLM 上游配置 =====
UPSTREAM_OPENAI_BASE=http://127.0.0.1:8000
DEFAULT_MODEL=qwen3-14b

# Mock 模式（开发测试用，1=启用 Mock，0=使用真实 vLLM）
USE_MOCK=0

# ===== 网关服务端口 =====
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8001

# ===== Admission（请求整形）限制 =====
# 以下值在单人/多人模式下会被 profiles.yaml 覆盖
MAX_INPUT_TOKENS=3072
MAX_OUTPUT_TOKENS=512

# ===== 限流配置 =====
# QPS 限制（每用户/IP 每秒请求数，0=不限）
RATE_QPS=0
# TPM 限制（每用户/IP 每分钟 token 数，0=不限）
RATE_TPM=0

# ===== 队列与超时 =====
QUEUE_SIZE=1
TIMEOUT_FIRST_TOKEN=20
TIMEOUT_TOTAL=120

# ===== 降级开关 =====
# 自动降级开关（1=启用，当 P95 首 token 超阈值时自动降低 max_output_tokens）
AUTO_DEGRADE=0

# ===== Django 配置（后续） =====
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=1
DATABASE_URL=sqlite:///db.sqlite3

# ===== 前端配置 =====
VITE_API_GATEWAY_URL=http://127.0.0.1:8001

# ===== 日志 =====
LOG_LEVEL=INFO
LOG_FORMAT=json
